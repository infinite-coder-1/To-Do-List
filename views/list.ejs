<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listHeading %></h1>
</div>

<div class="box">

  <%  for(var i=0; i<newListItems.length; i++){ %>
  <form  action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name= "checkbox" value= "<%= newListItems[i]._id%>" onchange="this.form.submit()">
      <p><%=newListItems[i].name%></p>
    </div>
    <input type="hidden" name="listName" value="<%= listHeading %>"></input>
  </form>
  <%  } %>

  <form class="item" action="/" method="post">
    <input type="text" name="listItem" placeholder="New Item" autocomplete="off" />
    <button type="submit" name="list" value="<%= listHeading%>">+</button>

  </form>
</div>

<%- include("footer") -%>
